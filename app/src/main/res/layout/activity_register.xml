<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg_bg"
    tools:context=".RegisterActivity">

    <ScrollView
        android:background="#A4070707"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/reg_ll_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Gym Details"
            android:textSize="30sp"
            android:fontFamily="@font/baloo_bhai"
            android:textColor="@color/my_primary_color"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                app:boxStrokeWidth="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/white"
                app:counterTextColor="@color/my_primary_color"
                android:hint="Gym Title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gymname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_primary_color"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                app:boxStrokeWidth="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:counterTextColor="@color/my_primary_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/white"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_address"
                    android:layout_height="wrap_content"
                    android:textColor="@color/my_primary_color"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                app:boxStrokeWidth="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="15dp"
                app:counterTextColor="@color/my_primary_color"
                app:boxCornerRadiusBottomEnd="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/white"
                app:counterMaxLength="10"
                app:counterEnabled="true"
                android:hint="Mobile or Phone Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|phone"
                    android:textColor="@color/my_primary_color"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_primary_color"
                android:text="submit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"
                android:onClick="submitBasicdtls"
                android:layout_marginTop="15dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>