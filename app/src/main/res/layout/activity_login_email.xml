<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/reg_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginEmailActivity">

    <ScrollView
        android:background="#A4070707"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/reg_ll_bg"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Here"
                android:textSize="30sp"
                android:fontFamily="@font/baloo_bhai"
                android:textColor="@color/my_primary_color"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                app:boxStrokeWidth="2dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/white"
                app:startIconTint="@color/my_primary_color"
                app:startIconDrawable="@drawable/baseline_email"
                android:hint="Enter Your email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/my_primary_color"
                    />
            </com.google.android.material.textfield.TextInputLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_getotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_primary_color"
                android:text="get otp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"/>


            <TextView
                android:id="@+id/tv_login"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If Registered! Login Here"
                android:paddingVertical="9dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/baloo_bhai"
                android:textSize="18sp"
                android:textColor="@color/my_primary_color"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>